body
  font 14px Arial, sans-serif
  background #F7F7F7

a
  color #00B7FF

h1
  text-align center
h2
  margin 0
  padding-bottom 10px
  font-weight normal
  border-bottom 1px solid #DADADA
h3
  margin 0
  font-weight normal
  font-size 800%

.rtChart
  min-width 310px
  height 400px
  margin 0 auto
  border 1px solid #DADADA
  border-radius 5px

.rtCounters
  text-align center
  div
    display inline-block
    width 16%
    margin 1%
    padding 1%
    min-width 150px
    border 1px solid #DADADA
    border-radius 5px
    background white

.alert
  border-style solid
  border-width 1px
  display none
  font-weight normal
  margin-bottom 1.11111rem
  position relative
  padding 0.77778rem 1.33333rem 0.77778rem 0.77778rem
  text-align center
  transition opacity 300ms ease-out
  background-color #008cba
  border-color #0078a0
  color white
  &.error
    background-color #f04124
    border-color #de2d0f